<!-- Modal -->
<div class="modal fade" id="basicExampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h2 class="modal-title " id="exampleModalLabel">Name: {{myResponse.name}}</h2>

        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <img class="card-img-top" src="{{myResponse.image2}}" alt="Card image cap">

        <h5 class="card-text">Total Followers: {{myResponse.followers}}</h5>
        <h5 class="card-text">Total Status: {{myResponse.statuses}}</h5>
      </div>
      <form class="" action="/profile/edit" method="post">

        <div class="custom-control custom-checkbox">
          <input type="hidden" type="text" name="twitterId" value="{{myResponse.twitterId}}">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button class="btn btn-primary">Stalking Mode</button>
        </div>
      </form>
      <br>
    </div>
  </div>
</div>
